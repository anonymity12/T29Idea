<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <LinearLayout
            android:id="@+id/mainheadview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/background2"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/myscrollLinearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:clickable="true"
        android:orientation="vertical">
        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/white">
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                tools:text="Paul"
                android:textColor="#DB4E61"
                android:textSize="14sp"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            ></View>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#CCCCCC"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="种了思想花"
                android:textColor="#C0C0C0"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/user_idea_count"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:text="-1"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="#DB4E61"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:text="个"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="#C0C0C0"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="花园繁荣度"
                android:textColor="#C0C0C0"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/user_good_idea_count"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:text="-1"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="#DB4E61"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:text="度"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="#C0C0C0"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            ></View>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#CCCCCC"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="颇有影响力的几个思想"
                android:textColor="#C0C0C0"
                android:textSize="14sp"/>
            <!--<android.support.v7.widget.RecyclerView-->
                <!--android:id="@+id/my_recycler_view"-->
                <!--android:orientation="horizontal"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                ></View>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            ></View>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#CCCCCC"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@android:color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="新特性未来"
                android:textColor="#DB4E61"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:gravity="start"
                android:text="这里将会有更多社交元素，例如思想结盟，以及大思想家的圈地功能"
                android:textColor="#C0C0C0"
                android:textSize="10sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                ></View>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            ></View>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#CCCCCC"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="我的数据统计"
                android:textColor="#C0C0C0"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="各种有意思的数据，比如结盟数量，思想影响面积"
                android:textColor="#C0C0C0"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/mainactionbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        >
        <ImageView
            android:id="@+id/userinfo_topbar"
            android:visibility="invisible"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/userinfo_returnbtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:onClick="finishWatch"
            android:src="@drawable/btn_back_n"/>
        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            style="?android:attr/borderlessButtonStyle"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_settings_red_18dp"
            android:onClick="goToLogin"

            />
    </RelativeLayout>
</RelativeLayout>