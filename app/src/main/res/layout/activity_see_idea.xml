<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context="com.paul.t29ideagarden2.atys.SeeIdeaActivity">
    <TextView
        android:id="@+id/text_markdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/idea_details"
        android:text="null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_markdown"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/idea_shared_count"
        android:layout_below="@+id/idea_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="right"
        android:textColor="@color/green"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>